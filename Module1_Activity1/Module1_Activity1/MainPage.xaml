<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module1_Activity1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="View-Specific" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="24">
            <Label Text="Click the Button for Layout-Specific" HorizontalTextAlignment="Center" FontSize="20"></Label>
        </StackLayout>

        <Button Clicked="OnButtonClicked">
            <Button.Resources>
                <Style TargetType="Button">
                    <Setter Property="Text" Value="Submit" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="BackgroundColor" Value="Black" />
                    <Setter Property="TextColor" Value="#ffffff" />
                    <Setter Property="CornerRadius" Value="15" />
                    <Setter Property="WidthRequest" Value="200" />
                    <Setter Property="HeightRequest" Value="100" />
                </Style>
            </Button.Resources>
        </Button>


    </StackLayout>

</ContentPage>
